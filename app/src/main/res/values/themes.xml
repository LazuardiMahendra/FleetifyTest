<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FleetifyTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FleetifyTest" parent="Base.Theme.FleetifyTest" />

    <!-- TEXT -->

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Title.Content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Subtitle.Content">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Title.Content.Position">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="Text.Subtitle.Content.Position">
        <item name="marginHorizontal">10dp</item>
    </style>


    <style name="BottomCornersRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">36dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>


    <style name="TextInputLayoutOutlinedBoxCorner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">13dp</item>
        <item name="boxCornerRadiusBottomStart">13dp</item>
        <item name="boxCornerRadiusTopEnd">13dp</item>
        <item name="boxCornerRadiusTopStart">13dp</item>
    </style>

    <style name="TextInputLayoutOutlinedBoxDropdownCorner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomEnd">13dp</item>
        <item name="boxCornerRadiusBottomStart">13dp</item>
        <item name="boxCornerRadiusTopEnd">13dp</item>
        <item name="boxCornerRadiusTopStart">13dp</item>

    </style>

    <style name="TextInputLayoutOutlinedBoxDropdownCorner.Position">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextInputLayoutOutlinedBoxCorner.Position">
        <item name="android:layout_marginTop">10dp</item>
    </style>


</resources>